@using VendorOrderTracker.Models;

<h1>Welcome To The Vendors Page!</h1>
@if (Model.Count == 0)
{
  <p>There are no currently no listed vendors.</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
  <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
  }
</ul>

<a href="/vendors/new">Add a new vendor</a>